{
  "Comment": "State machine for demonstrating model preprocessing and retraining",
  "StartAt": "Model Preprocess",
  "States": {
    "Model Preprocess": {
      "Type": "Task",
      "Resource": "arn:aws:states:::ecs:runTask.sync",
      "Parameters": {
        "Cluster": "${cluster_arn}",
        "TaskDefinition": "${preprocess_task_arn}",
        "LaunchType": "FARGATE",
        "NetworkConfiguration": {
          "AwsvpcConfiguration": {
            "Subnets": ${public_subnet_ids},
            "SecurityGroups": [
              "${security_group_id}"
            ],
            "AssignPublicIp": "ENABLED"
          }
        },
        "Overrides": {
          "ContainerOverrides": [
            {
              "Name": "model-preprocess-container",
              "Command": [
                "python",
                "preprocessing.py",
                "--processor_name",
                "${preprocessor_name}",
                "--kwargs",
                "${preprocess_args}"
              ]
            }
          ]
        }
      },
      "Next": "Model Retrain"
    },
    "Model Retrain": {
      "Type": "Task",
      "Resource": "arn:aws:states:::ecs:runTask.sync",
      "Parameters": {
        "Cluster": "${cluster_arn}",
        "TaskDefinition": "${retrain_task_arn}",
        "LaunchType": "FARGATE",
        "NetworkConfiguration": {
          "AwsvpcConfiguration": {
            "Subnets": ${public_subnet_ids},
            "SecurityGroups": [
              "${security_group_id}"
            ],
            "AssignPublicIp": "ENABLED"
          }
        },
        "Overrides": {
          "ContainerOverrides": [
            {
              "Name": "model-retrain-container",
              "Command.$": "States.Array('python', 'train_model.py', '--model_name', '${model_name}', '--process_datetime', $.process_datetime)"
            }
          ]
        }
      },
      "End": true
    }
  }
}




