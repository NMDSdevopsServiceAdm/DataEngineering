{
  "Comment": "A state machine for retraining Independent CQC models and generating predictions",
  "StartAt": "Model Retraining",
  "States": {
    "Model Retraining": {
      "Type": "Parallel",
      "Branches": [
        {
          "StartAt": "Build features - care home",
          "States": {
            "Build features - care home": {
              "Type": "Task",
              "Resource": "arn:aws:states:::ecs:runTask.sync",
              "Parameters": {
                "Cluster": "${model_cluster_arn}",
                "TaskDefinition": "${independent_cqc_model_task_arn}",
                "LaunchType": "FARGATE",
                "NetworkConfiguration": {
                  "AwsvpcConfiguration": {
                    "Subnets": ${public_subnet_ids},
                    "SecurityGroups": ["${independent_cqc_model_security_group_id}"],
                    "AssignPublicIp": "ENABLED"
                  }
                },
                "Overrides": {
                  "ContainerOverrides": [
                    {
                      "Name": "_03_independent_cqc-container",
                      "Command": [
                        "model_01_features_care_home.py",
                        "--bucket_name", "${dataset_bucket_name}",
                        "--model_name", "care_home"
                      ]
                    }
                  ]
                }
              },
              "Next": "Train model - care home"
            },
            "Train model - care home": {
              "Type": "Pass",
              "Next": "Predict - care home"
            },
            "Predict - care home": {
              "Type": "Pass",
              "End": true
            }
          }
        },
        {
          "StartAt": "Build features - non-residential without dormancy",
          "States": {
            "Build features - non-residential without dormancy": {
              "Type": "Pass",
              "Next": "Train model - non-residential without dormancy"
            },
            "Train model - non-residential without dormancy": {
              "Type": "Pass",
              "Next": "Predict - non-residential without dormancy"
            },
            "Predict - non-residential without dormancy": {
              "Type": "Pass",
              "End": true
            }
          }
        },
        {
          "StartAt": "Build features - non-residential with dormancy",
          "States": {
            "Build features - non-residential with dormancy": {
              "Type": "Pass",
              "Next": "Train model - non-residential with dormancy"
            },
            "Train model - non-residential with dormancy": {
              "Type": "Pass",
              "Next": "Predict - non-residential with dormancy"
            },
            "Predict - non-residential with dormancy": {
              "Type": "Pass",
              "End": true
            }
          }
        }
      ],
      "End": true
    }
  }
}
